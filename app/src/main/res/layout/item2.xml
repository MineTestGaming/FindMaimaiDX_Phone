<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/background"
              android:padding="16dp" tools:ignore="WebViewLayout">

    <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
                android:id="@+id/provinceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingLeft="15mm"
                  android:id="@+id/num5"
                  android:textSize="16sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingLeft="5mm"
                  android:id="@+id/numberPeo"
                  android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
                android:id="@+id/cityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingLeft="15mm"
                  android:id="@+id/num6"
                  android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" >
        <TextView
                android:id="@+id/areaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingLeft="15mm"
                  android:id="@+id/num7"
                  android:textSize="16sp"/>
        <Switch
                android:text="收藏"
                android:layout_width="match_parent"
                android:layout_marginLeft="10mm"
                android:layout_height="wrap_content" android:id="@+id/switch1"/>
    </LinearLayout>

    <WebView android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:id="@+id/imageView1"/>
    <View android:layout_width="wrap_content" android:layout_height="3dp" />
    <WebView android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:background="@android:color/transparent"
             android:id="@+id/imageView2"/>

    <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/x"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/y"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:layout_marginLeft="2mm"
                android:layout_centerInParent="true"/>
        <Button
                android:id="@+id/disButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="踩"
                android:layout_marginLeft="2mm"
                android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大众评价"
            android:layout_marginLeft="2mm"
            android:layout_centerInParent="true"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/admin"
        android:text="机厅信息更改"
        android:layout_height="match_parent"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="机厅数据更新" android:id="@+id/updateButton"/>
        <Button
                android:text="导航"
                android:layout_width="227dp"
                android:layout_marginLeft="1mm"
                android:layout_height="wrap_content" android:id="@+id/button"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="60dp"
                  android:orientation="horizontal">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/add" android:layout_marginLeft="30mm"
                android:text="录入商超"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
        android:id="@+id/hor"/>
    </ScrollView>

</LinearLayout>
