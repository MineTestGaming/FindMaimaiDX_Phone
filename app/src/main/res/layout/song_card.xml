<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="0dp"
              android:padding="0dp"

              android:radius="18dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_height="54dp"
                  android:padding="0dp"
                  android:layout_columnWeight="1"
                  android:orientation="vertical"
                  android:id="@+id/lay"
                  android:background="@drawable/rounded_background1"
                  android:radius="18dp"
                  android:layout_width="wrap_content">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:padding="0dp"
        >
            <ImageView
                    android:id="@+id/song_cover"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"
                android:padding="0dp">
                <ImageView
                        android:id="@+id/rank"
                        android:layout_width="25dp"
                        android:padding="0dp"
                        android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/song_title"
                android:layout_width="10mm"
                android:layout_height="8dp"
                android:text="Song Title"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="0dp"
                android:textSize="6sp"
                android:textColor="#000000"/>
        <LinearLayout android:layout_width="60dp" android:layout_height="8dp"
                      android:radius="18dp" android:orientation="horizontal"
                      android:padding="0dp"
        >
            <TextView
                    android:id="@+id/song_score"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:text="Score: 100%"
                    android:textSize="6sp"
                    android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:padding="0dp">

            <TextView
                    android:id="@+id/song_rating"
                    android:layout_width="12mm"
                    android:layout_height="6dp"
                    android:text="rating"
                    android:textSize="5sp"
                    android:textColor="#000000"
                    android:paddingLeft="3dp"
                    android:paddingRight="0dp" />

        </LinearLayout>



    </LinearLayout>
    <View
            android:layout_width="2mm"
     android:layout_height="1dp"/>
</LinearLayout>
